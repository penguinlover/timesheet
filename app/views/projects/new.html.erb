<%= pp_yaml @project.to_yaml %> 
<%= pp_yaml Project.attributes %>        
<hr />
<%= form_for @project do |f| %>
  <% Project.attributes.select { |attr| Project.updateable?(attr) }.each do |attr| %>
    <field>
      <%= f.label attr, Project.label_for(attr) %>
      <% case Project.field_type(attr) %>
        <% when "boolean" %>
          <%= f.check_box attr %>
        <% when "multipicklist" %>
          <%= f.select attr, Project.picklist_values(attr).collect { |p| [p["label"], p["value"]]}, :multiple => (Project.field_type(attr) == "multipicklist") %>
        <% else %>
          <%= f.text_field attr %>
      <% end %>
    </field>
  <% end %>
  <%= f.submit %>
<% end %>