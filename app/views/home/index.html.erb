<% unless current_user %>
  <div class="span5">
    <h3>Log in via your Timesheet account</h1>
    <%= form_tag create_session_path do %>
      <p>
        <%= label_tag :email %><br />
        <%= text_field_tag :email, params[:email] %>
      </p>
      <p>
        <%= label_tag :password %><br />
        <%= password_field_tag :password %>
      </p>
      <p class="button">
      <%= submit_tag "Log in", :class => 'btn btn-primary' %>
      </p>
    <% end %>
  </div>

  <div class="span5">
    <h3>Log in via company google account</h3>
  <%= link_to image_tag("google_icon.png", :size => '36x36'), google_auth_path %>
  </div>
<% end %>


